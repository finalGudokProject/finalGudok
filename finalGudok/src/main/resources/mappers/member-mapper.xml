	<update id="updateMemberA" parameterType="AdminMember">
		UPDATE MEMBER
		SET EMAIL=#{email}, ADDRESS_1=#{address1}, ADDRESS_2=#{address2}, ADDRESS_3=#{address3},POINT=#{point}
		WHERE MEMBER_ID=#{memberId}
	</update>
