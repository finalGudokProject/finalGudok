	<!-- 로그인 -->
	<resultMap type="Grade" id="gradeResultSet">
		<id property="gradeNo" column="GRADE_NO"/>
		<result property="gradeName" column="GRADE_NAME"/>
		<result property="gradeRate" column="GRADE_RATE"/>
